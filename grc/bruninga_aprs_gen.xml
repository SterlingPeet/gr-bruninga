<?xml version="1.0"?>
<block>
  <name>aprs_gen</name>
  <key>bruninga_aprs_gen</key>
  <category>bruninga</category>
  <import>import bruninga</import>
  <make>bruninga.aprs_gen($src, $dest, $via, $preamble_len_ms)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Source</name>
    <key>src</key>
    <type>string</type>
  </param>

  <param>
    <name>Dest</name>
    <key>dest</key>
    <type>string</type>
  </param>

  <param>
    <name>Via</name>
    <key>via</key>
    <type>raw</type>
  </param>

  <param>
    <name>Preamble Len (ms)</name>
    <key>preamble_len_ms</key>
    <value>100</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
